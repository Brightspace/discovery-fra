{
  "entrypoint": "index.html",
  "shell": "src/discovery-app.js",
  "fragments": [
    "src/discovery-init.js"
  ],
  "sources": [
    "images/**/*",
    "src/**/*"
  ],
  "extraDependencies": [
    "manifest.json",
    "node_modules/@webcomponents/webcomponentsjs/**/*.js",
    "!node_modules/@webcomponents/webcomponentsjs/gulpfile.js",
    "node_modules/d2l-*/*.js",
    "@brightspace-ui/core/**/*"
  ],
  "builds": [{
    "name": "es5-bundled",
    "preset": "es5-bundled",
    "addServiceWorker": true
  },{
    "name": "debug",
    "preset": "es5-bundled",
    "addServiceWorker": true,
    "js": {
      "minify": false,
      "compile": true
    },
    "html": {
      "minify": false
    },
    "bundle": false
  }],
  "npm": true,
  "lint": {
    "rules": [
      "polymer-3"
    ],
    "ignoreWarnings": [
      "databind-with-unknown-property",
      "undefined-elements"
    ]
  }
}
