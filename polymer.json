{
  "npm": true,
  "entrypoint": "index.html",
  "shell": "src/discovery-app.js",
  "fragments": [
    "src/discovery-init.js"
  ],
  "lint": {
    "rules": [
      "polymer-3"
    ],
    "ignoreWarnings": [
      "databind-with-unknown-property",
      "undefined-elements"
    ]
  },
  "sources": [
    "images/**/*",
    "src/**/*"
  ],
  "extraDependencies": [
    "manifest.json",
    "node_modules/@webcomponents/webcomponentsjs/**/*.js",
    "node_modules/d2l-*/*.js",
    "node_modules/fastdom/*.js",
    "node_modules/url-polyfill/*.js",
    "!bower_components/webcomponentsjs/gulpfile.js"
  ],
  "builds": [{
    "preset": "es5-bundled",
    "html": { "minify": false},
    "js": { "minify": false},
    "addServiceWorker": true
  }]
}
